@{
    ViewData["Title"] = "Create Product";
}
@model Product
<div class="card shadow mt-4 border-0">
    <div class="card-header bg-primary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input class="form-control shadow border-0" asp-for="Title" />
                    <label class="ms-2" asp-for="Title"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Description" />
                    <label class="ms-2" asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="ISBN" />
                    <label class="ms-2" asp-for="ISBN"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Author" />
                    <label class="ms-2" asp-for="Author"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="ListPrice" />
                    <label class="ms-2" asp-for="ListPrice"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price" />
                    <label class="ms-2" asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price50" />
                    <label class="ms-2" asp-for="Price50"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price100" />
                    <label class="ms-2" asp-for="Price100"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class=" row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">CREATE</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Back To List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

