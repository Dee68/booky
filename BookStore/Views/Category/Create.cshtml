@{
    ViewData["Title"] = "Create Category";
}
@model Category

<form method="post" class="mt-5">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row">
            <label class="p-0" asp-for="Name"></label>
            <input class="form-control p-1" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input class="form-control p-1" asp-for="DisplayOrder" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class=" row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">CREATE</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>
        
        
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

